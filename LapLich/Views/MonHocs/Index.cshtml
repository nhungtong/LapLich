}
<link href="~/Content/css/indexMH.css" rel="stylesheet" />

<h1>THÔNG TIN MÔN HỌC</h1>
<div class="content-area">
    
    <p>
        <a href="@Url.Action("Create", "MonHocs")">CREATE NEW</a>
    </p>

    <table class="table">
